import os
import json

def process_files_folder():
    files_folder = '/path/to/files/folder'
    json_folder = '/path/to/json/folder'

    # Iterate through each directory in the files folder
    for dir_name in os.listdir(files_folder):
        dir_path = os.path.join(files_folder, dir_name)

        # Check if the item is a directory
        if os.path.isdir(dir_path):
            json_file_path = os.path.join(json_folder, f'{dir_name}.json')
            json_data = []

            # Iterate through each file in the directory
            for file_name in os.listdir(dir_path):
                file_path = os.path.join(dir_path, file_name)

                # Check if the item is a file
                if os.path.isfile(file_path):
                    with open(file_path, 'r') as file:
                        file_content = file.read()
                        json_data.append(file_content)

            # Write the combined content to the JSON file
            with open(json_file_path, 'w') as json_file:
                json.dump(json_data, json_file)

if __name__ == '__main__':
    process_files_folder()

